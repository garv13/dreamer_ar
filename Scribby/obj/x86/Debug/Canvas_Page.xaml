<Page
    x:Class="Scribby.Canvas_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Scribby"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#ffffff">
        <InkCanvas x:ConnectionId='1' x:Name="DrawingArea"/>
    </Grid>
    <Page.BottomAppBar>
        <AppBar x:ConnectionId='2' x:Name="Appbar" IsOpen="False" Visibility="Visible" IsSticky="True">
            <StackPanel Orientation="Horizontal">
                <AppBarButton x:ConnectionId='3' Name="NextBar" Icon="Save" Label="Save Image"                         />
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>
</Page>

